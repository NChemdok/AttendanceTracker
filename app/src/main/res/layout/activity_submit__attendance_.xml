            </LinearLayout>
        </ScrollView>

        <RelativeLayout
            android:id="@+id/relative_layout_above_bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true">

            <com.google.android.gms.ads.AdView xmlns:ads="http://schemas.android.com/apk/res-auto"
                android:id="@+id/adView_submit_attendance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                ads:adSize="BANNER"
                ads:adUnitId="ca-app-pub-7717760204588800/2782318738">

            </com.google.android.gms.ads.AdView>

            <Button
                android:id="@+id/button_submit_attendance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/adView_submit_attendance"
                android:layout_margin="2dp"
                android:background="@drawable/white_border"
                android:gravity="center"
                android:padding="3dp"
