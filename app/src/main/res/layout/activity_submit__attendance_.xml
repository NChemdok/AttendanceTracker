<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_1"
    tools:context=".Submit_Attendance_Activity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/light_blue">

        <TextView
            android:id="@+id/day_selected_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/light_maroon"
            android:gravity="center"
            android:padding="4dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/text_press_button_hint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/day_selected_text"
            android:layout_centerHorizontal="true"
            android:layout_margin="4dp"
            android:background="@drawable/white_border"
            android:padding="4dp"
            android:text="#Press The Button if Present"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/text_color_hint_present"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/day_selected_text"
            android:layout_alignParentStart="true"
            android:layout_margin="8dp"
            android:background="@color/dark_yellow"
            android:foreground="@drawable/white_border"
            android:padding="4dp"
            android:text="Present"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/text_color_hint_absent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/day_selected_text"
            android:layout_alignParentEnd="true"
            android:layout_centerHorizontal="true"
            android:layout_margin="8dp"
            android:foreground="@drawable/white_border"
            android:background="@color/light_yellow"
            android:padding="4dp"
            android:text="Absent"
            android:textStyle="bold" />

        <ScrollView
            android:id="@+id/scroll_view_toggle_buttons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_color_hint_absent"
            android:layout_above="@+id/relative_layout_above_bottom"
            android:layout_margin="4dp">

            <LinearLayout
                android:background="@drawable/white_border"
                android:layout_margin="2dp"
                android:padding="4dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ToggleButton
                    android:id="@+id/toggle_sub_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"
                    android:layout_marginBottom="3dp"
                    android:background="@drawable/toggle_button_state"
                    android:textOff=""
                    android:textOn=""
                    android:visibility="gone" />

                <ToggleButton
                    android:id="@+id/toggle_sub_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"
